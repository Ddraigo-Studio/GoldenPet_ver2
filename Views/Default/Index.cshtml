                        <div class="form-group">
                            <input type="text" class="form-control border-0 p-4" placeholder="Họ tên" required="required" />
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control border-0 p-4" placeholder="Email" required="required" />
                        </div>
