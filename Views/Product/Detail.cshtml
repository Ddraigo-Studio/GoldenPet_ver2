@model GoldenPet.Models.tb_Product
@{
    ViewBag.Title = Model.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Product Detail Start -->
<div class="container py-5">
    <div class="row pt-5">
        <div class="col-lg-8">
            <div class="d-flex flex-column text-left mb-4">
                <h4 class="text-secondary mb-3">Product Detail</h4>
                <h1 class="mb-3">Product Name Here</h1>
                <div class="d-index-flex mb-2">
                    <span class="mr-3"><i class="fa fa-user text-muted"></i> Seller Name</span>
                    <span class="mr-3"><i class="fa fa-tag text-muted"></i> Category Name</span>
                    <span class="mr-3"><i class="fa fa-comments text-muted"></i> 15 Reviews</span>
                </div>
            </div>

            <div class="mb-5">
                <img class="img-fluid w-100 mb-4" src="img/product.jpg" alt="Product Image">
                <p>Product description goes here. Highlight features, specifications, and any important details about the product. Make sure to give potential buyers a clear understanding of what makes this product unique.</p>

                <h2 class="mb-4">Features</h2>
                <ul>
                    <li>Feature 1</li>
                    <li>Feature 2</li>
                    <li>Feature 3</li>
                    <li>Feature 4</li>
                </ul>

                <h3 class="mb-4">Price: $XX.XX</h3>
                <button class="btn btn-primary btn-lg">Add to Cart</button>
            </div>

            <div class="media bg-light mb-5 p-4 p-md-5">
                <img src="img/user.jpg" alt="User Image" class="img-fluid mr-4 mt-1" style="width: 80px;">
                <div class="media-body">
                    <h5 class="mb-3">User Review</h5>
                    <p class="m-0">Conset elitr erat vero labore dolor ipsum et diam, tempor eos dolor conset lorem ipsum, ipsum ipsum sit no ut est. Guber ea ipsum erat conset magna kasd amet est magna elitr ea sit justo sed.</p>
                </div>
            </div>

            <div class="mb-5">
                <h3 class="mb-4">Customer Reviews (3)</h3>
                <div class="media mb-4">
                    <img src="img/user.jpg" alt="User Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>John Doe <small><i>01 Jan 2045</i></small></h6>
                        <p>Great product! It has exceeded my expectations. Highly recommend.</p>
                    </div>
                </div>
                <div class="media mb-4">
                    <img src="img/user.jpg" alt="User Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>Jane Smith <small><i>02 Jan 2045</i></small></h6>
                        <p>Good value for the price. Satisfied with my purchase.</p>
                    </div>
                </div>
            </div>

            <div style="padding: 30px; background: #f6f6f6;">
                <h3 class="mb-4">Leave a Review</h3>
                <form>
                    <div class="form-group">
                        <label for="name">Name *</label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="form-group">
                        <label for="rating">Rating *</label>
                        <select class="form-control" id="rating" required>
                            <option value="">Select Rating</option>
                            <option value="5">5 Stars</option>
                            <option value="4">4 Stars</option>
                            <option value="3">3 Stars</option>
                            <option value="2">2 Stars</option>
                            <option value="1">1 Star</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message">Message *</label>
                        <textarea id="message" cols="30" rows="5" class="form-control" required></textarea>
                    </div>
                    <div class="form-group mb-0">
                        <input type="submit" value="Submit Review" class="btn btn-primary px-3">
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-4 mt-5 mt-lg-0">
            <div class="mb-5">
                <form action="">
                    <div class="input-group">
                        <input type="text" class="form-control form-control-lg" placeholder="Search Products">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary"><i class="fa fa-search"></i></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="mb-5">
                <h3 class="mb-4">Categories</h3>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Electronics
                        <span class="badge badge-primary badge-pill">150</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Clothing
                        <span class="badge badge-primary badge-pill">131</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Home Appliances
                        <span class="badge badge-primary badge-pill">78</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Books
                        <span class="badge badge-primary badge-pill">56</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Beauty
                        <span class="badge badge-primary badge-pill">98</span>
                    </li>
                </ul>
            </div>
            <div class="mb-5">
                <h3 class="mb-4">Related Products</h3>
                <div class="d-flex align-items-center border-bottom mb-3 pb-3">
                    <img class="img-fluid" src="img/related-product-1.jpg" style="width: 80px; height: 80px;" alt="Related Product 1">
                    <div class="d-flex flex-column pl-3">
                        <a class="text-dark mb-2" href="">Related Product Name 1</a>
                        <small class="mr-3 text-muted">Category</small>
                    </div>
                </div>
                <div class="d-flex align-items-center border-bottom mb-3 pb-3">
                    <img class="img-fluid" src="img/related-product-2.jpg" style="width: 80px; height: 80px;" alt="Related Product 2">
                    <div class="d-flex flex-column pl-3">
                        <a class="text-dark mb-2" href="">Related Product Name 2</a>
                        <small class="mr-3 text-muted">Category</small>
                    </div>
                </div>
                <div class="d-flex align-items-center border-bottom mb-3 pb-3">
                    <img class="img-fluid" src="img/related-product-3.jpg" style="width: 80px; height: 80px;" alt="Related Product 3">
                    <div class="d-flex flex-column pl-3">
                        <a class="text-dark mb-2" href="">Related Product Name 3</a>
                        <small class="mr-3 text-muted">Category</small>
                    </div>
                </div>
            </div>
            <div class="mb-5">
                <h3 class="mb-4">Tag Cloud</h3>
                <div class="d-flex flex-wrap m-n1">
                    <a href="" class="btn btn-outline-primary m-1">Electronics</a>
                    <a href="" class="btn btn-outline-primary m-1">Fashion</a>
                    <a href="" class="btn btn-outline-primary m-1">Home</a>
                    <a href="" class="btn btn-outline-primary m-1">Books</a>
                    <a href="" class="btn btn-outline-primary m-1">Gifts</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product Detail End -->
